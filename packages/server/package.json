    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "prisma": "^2.27.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@prisma/client": "^2.27.0",
    "graphql-yoga": "^1.18.3"
